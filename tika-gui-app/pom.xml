                  <outputFileName>zulu-jre.zip</outputFileName>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>3.7.1</version>
            <configuration>
              <tarLongFileMode>posix</tarLongFileMode>
              <descriptors>
                <descriptor>assemblies/assembly-win_x64.xml</descriptor>
                <descriptor>assemblies/assembly-linux_x64.xml</descriptor>
                <descriptor>assemblies/assembly-macosx_x64.xml</descriptor>
                <descriptor>assemblies/assembly-macosx_aarch64.xml</descriptor>
              </descriptors>
            </configuration>
            <executions>
              <execution>
                <id>make-assembly</id> <!-- this is used for inheritance merges -->
                <phase>package</phase> <!-- bind to the packaging phase -->
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

